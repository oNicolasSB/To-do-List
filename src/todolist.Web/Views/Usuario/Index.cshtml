@model UsuarioViewModel

<section class="usuario py-5">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="titulo d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-3">
                    <h2 class="mb-2 text-principal-dark">Dados pessoais: </h2>
                    <a asp-action="Edit" asp-controller="Usuario" class="btn btn-principal-light mb-3">Editar</a>
                </div>
                <div class="infos d-flex flex-column">
                    <p class="mb-0">Nome: </p>
                    <p class="fs-4">@Model.Nome</p>
                    <p class="mb-0">E-mail: </p>
                    <p class="fs-4">@Model.Email</p>
                </div>
            </div>
            <hr class="text-principal-light">
            <div class="senha d-flex flex-column align-items-md-start">
                <h2 class="mb-3 text-principal-dark">Senha: </h2>
                <a asp-action="AltSenha" asp-controller="Usuario" class="btn btn-danger">Alterar Senha</a>
            </div>
        </div>
    </div>
    </div>
    </div>
</section>